.person-container
  width 100%
  height 100%
  .person-wrap
    margin 20px
    min-height calc(100% - 40px)
    background-color white
    border-radius 2px
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    .person-cell
      height 40px
      color text-color-666
      .cell-title
        padding-left 100px
        padding-right 40px
      .normal-input
        max-width 300px
    .person-img-cell
      .cell-title
        padding-left 100px
        padding-right 40px
      .avatar
        width 100px
        height 100px
        border-radius 50px
      .avatar-empty
        min-width 100px
        height 100px
        width 100px
        border-radius 50px
        margin-right 10px
        border solid 1px #eeeeee
        color #999999
      .avatar-edit-wrap
        .avatar-uploader
          margin-left 30px
          margin-top 8px
      .help-cell
        height 50px
        .text
          color text-color-666
.person-password-modal
  .modal-cell
    min-height 40px
    width 100%
    margin-bottom 20px
    .normal-title
      white-space nowrap
      padding-right 10px
      line-height 40px
      min-width 90px
    .normal-input
      width 300px
    .w-150
      width 150px
    .verify-code-wrap
      width 120px
      height 40px
      margin-left 30px
      overflow hidden
      div,svg,img
        width 100%
        height 100%


