.welcome-container
  width 100%
  height 100%
  .welcome-view-wrap
    height 60px
    min-height 60px
    padding 20px
    .welcome-title
      font-size 16px
      line-height 20px
      color #333333
      font-weight 500
      .user-name
        font-style oblique
  .layout-n-4-module
    width calc(25%)
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    background-color #ffffff
    min-height 160px
    border-radius 4px
    padding 24px
    flex-direction column
    align-items center
    justify-content center
    display flex
    .dash-bord-title
      color #333333
      font-size 20px
      line-height 32px
      font-weight 500
      text-align center
    .dash-bord-number
      font-size 48px
      line-height 72px
      text-align center
  .layout-n-2-module
    width calc(50% - 20px)
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    background-color #ffffff
    min-height 400px
    border-radius 4px
    padding 24px
  .layout-n-1-module
    width calc(100%)
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    background-color #ffffff
    min-height 360px
    border-radius 4px
    padding 24px
