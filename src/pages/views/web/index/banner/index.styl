.index-banner-container
  width 100%
  height 100%
  .banner-title-wrap
    margin 20px
    min-height calc(100% - 40px)
    background-color white
    border-radius 2px
    overflow hidden
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    .table-wrap
      margin 20px
      min-height 300px
      .index-img
        width 128px
        height 52px
    .button-wrap
      margin 20px
    .prompt-text
      color orange
.index-banner-modal-wrap
  .item-cell
    min-height 40px
    .prompt-text
      color orange
    .item-title
      min-width 80px
      max-height 60px
      line-height 40px
      color text-color-666
    .button-cell-input
      width 600px
    .input-input
      max-width 800px
    .w-400
      width 400px
    .w-200
      width 200px
    .w-600
      width 600px
    .item-img
      width 532px
      height 144px
    .item-img-h5
      height 194px
      width 144px
    .empty-img
      width 144px
      height 144px
      display flex
      justify-content center
      align-items center
      color text-color-666
      border 1px solid #d9d9d9
    .normal-select
      min-width 150px
    .img-uploader
      height 100%
      width 400px
      .ant-upload-select-picture-card
        min-height 144px
        min-width 144px
        width 144px
        flex-direction column
        display flex
        align-items center
        justify-content center
        height auto
        .h5-upload
          width 144px
          height 194px
          flex-direction column
          display flex
          align-items center
          justify-content center
    .remark-text
      color color-r2
      height 20px
      line-height 20px
    .item-desc
      min-height 40px
    .n-select
      min-width 120px
  .h-100
    height 100px
  .h-144
    height 144px
  .h-164
    height 164px
  .h-184
    height 184px
