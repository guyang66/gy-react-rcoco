@import '~@common/common'
.index-module-container
  width 100%
  height 100%
  .index-module-wrap
    margin 20px
    min-height calc(100% - 40px)
    background-color white
    border-radius 2px
    overflow hidden
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    .prompt-text
      color orange
    .normal-text
      color text-color-666
      font-size 14px
      line-height 36px
      height 36px
    .table-wrap
      margin 20px
      .index-img
        width 100px
        height 75px
.index-module-modal-wrap
  .item-cell
    height 60px
    .item-title
      min-width 80px
      color text-color-666
    .input-input
      max-width 800px
    .item-img
      width 192px
      height 144px
    .empty-img
      width 144px
      height 144px
      display flex
      justify-content center
      align-items center
      color text-color-666
      border 1px solid #d9d9d9
    .img-uploader
      height 100%
      width 400px
      .ant-upload
        height 144px
        width 144px
    .remark-text
      color color-r2
      height 20px
      line-height 20px
  .h-100
    height 100px
  .h-144
    height 144px
  .h-164
    height 164px
  .h-184
    height 184px
