@import '~@common/common'
.resume-type-container
  width 100%
  height 100%
  .index-module-wrap
    margin 20px
    min-height 300px
    background-color white
    border-radius 2px
    overflow hidden
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    .prompt-text
      color orange
    .module-title
      color #4169E1
    .normal-text
      color text-color-666
      font-size 14px
      line-height 36px
      height 36px
    .table-wrap
      margin 20px
      .index-img
        width 100px
        height 75px
.add-modal
  .modal-cell
    min-height 40px
    width 100%
    margin-bottom 20px
    .normal-title
      white-space nowrap
      padding-right 10px
      line-height 40px
      min-width 70px
    .normal-input
      width 100%
