.home-main
  width 100%
  display flex
  flex-direction column
  align-items center
  .carouse-wrap
    width 100%
    height 600px
  .btn-jump
    margin 30px
  .product-point-title
    color #333333
    font-size 24px
    font-weight bold
    margin-top 20px
    margin-bottom 20px
  .product-point-wrap
    max-width 1200px
    width 100%
    background-color #F5F5F5
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    .point-cell:hover
      background-color #dcff93
      box-shadow 5px 5px 0 0 rgba(232, 232, 232, 1)
      transition: all 0.2s
      margin-top 5px
    .point-cell
      width 40%
      max-width 400px
      height 300px
      margin-left 50px
      margin-right 50px
      background-color white
      margin-top 50px
      margin-bottom 50px
      display flex
      align-items center
      flex-direction column
      border-radius 10px
      transition: all 0.2s
      .point-icon
        width 20%
        height auto
        margin-top 20px
      .point-text
        color #2C3E5C
        font-size 16px
        font-weight bold
        margin-top 10px
        margin-bottom 20px
      .point-desc
        color #6C86AD
        font-size 14px
        width 80%
        margin-bottom 25px

@media (max-width: 500px)
  .home-main
    .product-point-wrap
      .point-cell
        width 80%
