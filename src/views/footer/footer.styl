.footer-main
  height 400px;
  width 100%
  display flex
  justify-content center
  background-color #333333
  .footer-mess
    color white
    display flex
    flex-direction column
    justify-content center
    margin-right 150px
    .title
      font-size 24px
    .mess
      font-size 20px
      margin-top 10px
      margin-bottom 10px
  .footer-code
    display flex
    align-items center
    justify-content center
    margin-left 100px
    flex-direction column
    .code-img
      width 140px
      height 140px
    .code-text
      color white
      font-size 16px
      margin-top 20px

@media (max-width: 500px)
  .footer-main
    flex-direction column
    align-items center
    justify-content center
    .footer-mess
      align-items center
      width 100%
      margin-right 0px
      .title
        margin-top 10px
        font-size 16px
      .mess
        font-size 14px
        margin-top 5px
        margin-bottom 5px
    .footer-code
      margin-left 0
      .code-img
        margin-top 15px
        width 80px
        height 80px
      .code-text
        color white
        font-size 14px
        margin-top 10px
    .mar-b20
      margin-bottom 20px

