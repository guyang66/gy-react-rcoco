.goods-main
  width 100%
  height 600px
  background-color #13c2c2
  display flex
  align-items center
  justify-content center
  .goods-img
    width 400px
    height 400px
    background-color white
    border-radius 200px
    margin-right 40px
    overflow hidden
    img
      width 100%
      height 100%
  .goods-desc
    color white
    margin-left 40px
    font-size 18px
    max-width 400px

@media (max-width: 500px)
  .goods-main
    height auto
    flex-direction column
    padding-bottom 30px
    .goods-img
      width 70%
      height auto
      margin-left 0
      margin-right 0
      margin-top 100px
    .goods-desc
      margin-left 0
      font-size 16px
      padding-left 15px
      padding-right 15px
      margin-top 25px

