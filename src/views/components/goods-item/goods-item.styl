.goods-item-content
  max-width 1200px;
  display flex
  align-items center
  flex-direction column
  .goods-item-cell
    width 100%
    display flex
    flex-direction column
    background-color #b8f1ed
    align-items center
    justify-content center
    .cate-title
      color white
      margin-top 20px
      margin-bottom 0
    .cate-desc
      color white
      font-size 16px
    .goods-wrap
      display flex
      flex-wrap wrap
      width 100%
      .goods-cell-one
        width 20%
        margin 20px
        height 400px
        overflow hidden
        img
          width 100%
          cursor pointer
          height auto
        .goods-name
          color white
          font-size 18px
          font-weight bold
          margin-top 15px
          margin-bottom 15px
        .goods-desc
          color white
          font-size 14px
          height 100px
          line-height 25px
          width 100%
          text-overflow ellipsis
          overflow hidden
          display -webkit-box

@media (max-width: 500px)
  .goods-item-content
    .goods-item-cell
      .goods-wrap
        .goods-cell-one
          width 40%
