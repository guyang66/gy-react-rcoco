{
  "root": true,
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi":  [2, "always"],
    "no-console": "off",
    "react/jsx-filename-extension": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "react/prefer-stateless-function": "off",
    "react/no-array-index-key": "off",
    "react/prop-types": "off",
    "no-useless-constructor": "off", // 无意义的重写constructir
    "react/no-deprecated": "off", // 可能将被废弃的函数警告
    // 没有交互的元素不允许有事件，可以添加role属性变成"有交互"的元素,如button、link、checkbox、radio、option...
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "import/named": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "legacyDecorators": true
    }
  },
  "globals": {
    "Promise": false,
    "node": false,
    "sessionStorage": false
  },
  "plugins": [
    "react",
    "babel"
  ]
}
